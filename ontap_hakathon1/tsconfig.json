{
  "compilerOptions": {
    /* Output */
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./ts",
    "outDir": "./js",

    /* Node.js environment */
    "lib": ["ES2020"],
    "types": ["node"],

    /* Strict type checking (cÃ³ thá»ƒ táº¯t bá»›t náº¿u má»‡t ðŸ˜†) */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,

    /* Helpful flags */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Source maps cho debug */
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
